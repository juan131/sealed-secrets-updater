{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "kubesealConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "controllerName": {
          "description": "Sealed Secrets controller name",
          "type": "string",
          "default": "sealed-secrets-controller"
        },
        "controllerNamespace": {
          "description": "Sealed Secrets controller namespace",
          "type": "string",
          "default": "kube-system"
        },
        "certificate": {
          "description": "Certificate / public key file / URL to use for encryption",
          "type": "string"
        }
      }
    },
    "secrets": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "description": "Sealed Secret name",
            "type": "string"
          },
          "namespace": {
            "description": "Sealed Secret namespace scope",
            "type": "string"
          },
          "source": {
            "description": "Secrets source",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "description": "Source type",
                "type": "string",
                "enum": [
                  "local"
                ]
              },
              "config": {
                "description": "Source configuration",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "path": {
                    "description": "Path to local secrets file",
                    "type": "string"
                  },
                  "relative": {
                    "description": "Consider path as relative to current working directory",
                    "type": "boolean",
                    "default": true
                  }
                }
              }
            },
            "required": [
              "type",
              "config"
            ]
          },
          "output": {
            "description": "Output",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "description": "Output type",
                "type": "string",
                "enum": [
                  "local"
                ]
              },
              "config": {
                "description": "Output configuration",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "path": {
                    "description": "Path to local output manifest",
                    "type": "string"
                  },
                  "relative": {
                    "description": "Consider path as relative to current working directory",
                    "type": "boolean",
                    "default": true
                  }
                }
              }
            },
            "required": [
              "type",
              "config"
            ]
          },
          "metadata": {
            "description": "Metadata",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "labels": {
                "description": "Secret labels",
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "annotations": {
                "description": "Secret annotations",
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        },
        "required": [
          "namespace",
          "source",
          "output"
        ]
      }
    }
  }
}
